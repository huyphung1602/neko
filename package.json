{
  "name": "neko",
  "version": "1.0.0",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "concurrently \"npm run dev:vue\" \"npm run dev:electron\"",
    "dev:vue": "vite",
    "dev:electron": "ELECTRON_START_URL=http://localhost:5173 electron .",
    "build": "vue-tsc -b && vite build",
    "build:electron": "npm run build && electron-builder",
    "preview": "vite preview"
  },
  "dependencies": {
    "date-fns": "^4.1.0",
    "marked": "^15.0.6",
    "pinia": "^3.0.2",
    "uuid": "^11.1.0",
    "vue": "^3.5.13",
    "vue-i18n": "^10.0.8",
    "vue-router": "^4.5.0"
  },
  "devDependencies": {
    "@tailwindcss/typography": "^0.5.19",
    "@types/node": "^22.10.2",
    "@types/uuid": "^10.0.0",
    "@vitejs/plugin-vue": "^5.2.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "electron": "^34.0.0",
    "electron-builder": "^25.1.8",
    "postcss": "^8.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.7.2",
    "vite": "^6.0.3",
    "vue-tsc": "^2.1.10"
  },
  "build": {
    "appId": "com.neko.app",
    "productName": "Neko",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.productivity"
    }
  }
}
